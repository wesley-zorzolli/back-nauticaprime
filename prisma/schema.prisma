generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Marca {
  id          Int          @id @default(autoincrement())
  nome        String       @db.VarChar(30)
  embarcacoes Embarcacao[]

  @@map("marcas")
}

model Embarcacao {
  id         Int          @id @default(autoincrement())
  modelo     String       @db.VarChar(30)
  ano        Int          @db.SmallInt
  motor      String       @db.VarChar(50)
  km_horas   String       @db.VarChar(50)
  acessorios String?
  foto       String
  vendida    Boolean      @default(false)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  marcaId    Int
  adminId    String?      @db.VarChar(36)
  preco      Decimal      @db.Decimal(10, 2)
  admin      Admin?       @relation(fields: [adminId], references: [id])
  marca      Marca        @relation(fields: [marcaId], references: [id])
  vendas     Venda[]
  propostas  Proposta[]

  @@map("embarcacoes")
}

model Cliente {
  id        String     @id @default(uuid()) @db.VarChar(36)
  nome      String     @db.VarChar(60)
  email     String     @db.VarChar(40)
  senha     String     @db.VarChar(60)
  cidade    String     @db.VarChar(30)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  vendas    Venda[]
  propostas Proposta[]

  @@map("clientes")
}

model Venda {
  id           Int        @id @default(autoincrement())
  clienteId    String     @db.VarChar(36)
  embarcacaoId Int
  descricao    String     @db.VarChar(255)
  valor        Decimal    @db.Decimal(10, 2)
  data_venda   DateTime
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  adminId      String?    @db.VarChar(36)
  admin        Admin?     @relation(fields: [adminId], references: [id])
  cliente      Cliente    @relation(fields: [clienteId], references: [id])
  embarcacao   Embarcacao @relation(fields: [embarcacaoId], references: [id])

  @@map("vendas")
}

model Admin {
  id          String       @id @default(uuid()) @db.VarChar(36)
  nome        String       @db.VarChar(60)
  email       String       @db.VarChar(40)
  senha       String       @db.VarChar(60)
  nivel       Int          @default(2) @db.SmallInt
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  embarcacoes Embarcacao[]
  logs        Log[]
  vendas      Venda[]

  @@map("admins")
}

model Log {
  id          Int      @id @default(autoincrement())
  adminId     String   @db.VarChar(36)
  descricao   String   @db.VarChar(60)
  complemento String   @db.VarChar(200)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  admin       Admin    @relation(fields: [adminId], references: [id])

  @@map("logs")
}

enum Combustiveis {
  FLEX
  GASOLINA
  ETANOL
  DIESEL
}

model Proposta {
  id           Int        @id @default(autoincrement())
  cliente      Cliente    @relation(fields: [clienteId], references: [id])
  clienteId    String     @db.VarChar(36)
  embarcacao   Embarcacao @relation(fields: [embarcacaoId], references: [id])
  embarcacaoId Int
  descricao    String     @db.VarChar(500)
  status       String     @db.VarChar(20) @default("PENDENTE")
  resposta     String?    @db.VarChar(1000)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@map("propostas")
}
